@page "/"

<PageTitle>Collections home page</PageTitle>

<div class="container-xxl py-3">
    <div>
        <h1 class="display-6">
            <span class="text-danger">
                <i class="bi bi-fire"></i>
            </span>
            Top 5 Largest Collections
        </h1>
    </div>
    <div class="d-flex flex-column flex-md-row justify-content-between my-3">
        <div class="row row-cols-2 row-cols-lg-4 row-cols-x1-5 g-3 justify-content-center justify-content-md-start">

            @if (myFirstCollection is not null)
            {
                @foreach (Collection item in myFirstCollection)
                {
                    <div class="col">
                        <TopCollections Collection="item" />
                    </div>
                }
            }
            else
            {
                for (int i = 0; i < 10; i++)
                {
                    <div class="col">
                        <TopCollections />
                    </div>
                }
            }

        </div>
    </div>
</div>

@code {
    private List<Collection>? myFirstCollection;

    public List<Collection> CreateData()
    {

        List<int> myItems = [1, 2, 3, 4, 5];
        List<Collection> collections = [];
        collections.Add(new Collection(1, myItems, "My Book Shelf A1", "A book shelf for my beloved books.", "Books"));
        collections.Add(new Collection(2, myItems, "My Book Shelf A2", "A book shelf for my good books.", "Books"));
        collections.Add(new Collection(3, myItems, "My Book Shelf A3", "A book shelf for my regular books.", "Books"));

        return collections;
    }

    protected override async Task OnInitializedAsync()
    {
        myFirstCollection = await Task.Run(() => CreateData());
    }


}



