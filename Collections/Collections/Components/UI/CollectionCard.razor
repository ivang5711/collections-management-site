@if (Collection is not null)
{
    <div class="card h-100 fade-in">
        @if (string.IsNullOrEmpty(Collection.Name))
        {
            <img class="card-img-top" alt="Collection Item" src="https://cdn.freecodecamp.org/platform/universal/fcc_primary.svg" />
        }
        else
        {
            <img class="card-img-top" alt="Collection Item" src="@Collection.ImageLink" />
        }
        <div class="card-body border-top bg-light">
            <h5 class="card-title">@Collection.Name</h5>
            <p class="card-text">@DateTime.Now</p>
        </div>
        <div class="card-footer text-end">
            <a class="btn btn-primary" href="/item-details/@Collection.Id">Details</a>
        </div>
    </div>
}
else
{
    <div class="card h-100">
        <img class="card-img-top" alt="Collection Item" src="https://cdn.freecodecamp.org/platform/universal/fcc_primary.svg" />
        <div class="card-body border-top bg-light">
            <h5 class="card-title placeholder-glow">
                <span class="placeholder col-6"></span>
            </h5>
            <p class="card-text placeholder-glow">
                <span class="placeholder col-8"></span>
            </p>
        </div>
        <div class="card-footer text-end">
            <button class="btn btn-primary disabled placeholder col-6">
                Details
            </button>
        </div>
    </div>
}



@code {
    [Parameter]
    public Collection? Collection { get; set; }

}
