@page "/search/"
@using Microsoft.AspNetCore.Components.Server.ProtectedBrowserStorage
@using Collections.Models
@inject ProtectedLocalStorage ProtectedLocalStore
@inject IDbContextFactory<ApplicationDbContext> _contextFactory
@inject NavigationManager _navigationManager
@inject IJSRuntime JSRuntime
@inject IStringLocalizer<Resource> localizer

@rendermode InteractiveServer

<PageTitle>@localizer["Search"]</PageTitle>

<div class="container-xxl py-3 ">

    <h3 class="text-center pb-3">@localizer["Search results"]: @totalCountUnique</h3>
    @if (Collections is not null)
    {
        <div class="d-flex justify-content-center">
            <table class="table table-sm table-hover table-striped
                              rounded-2 overflow-hidden">
                <thead class="table-secondary">
                    <tr>
                        <th class="text-end px-2">@localizer["#"]</th>
                        <th class="px-2">@localizer["Name"]</th>
                        <th class="px-2">@localizer["Type"]</th>
                        <th class="px-2">@localizer["Link"]</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int j = 1;
                        foreach (Collection collection in Collections)
                        {
                            <tr>
                                <td class="text-end px-2">@(j++)</td>
                                <td class="px-2">@collection.Name</td>
                                <td class="px-2">@localizer["Collection"]</td>
                                <td class="px-2">
                                    <a class="btn-sm btn-outline-secondary"
                                       href="/collection-details/@collection.Id">@localizer["Details"]</a>
                                </td>
                            </tr>
                        }

                        foreach (Item item in Items)
                        {
                            <tr>
                                <td class="text-end px-2">@(j++)</td>
                                <td class="px-2">@item.Name</td>
                                <td class="px-2">@localizer["Item"]</td>
                                <td class="px-2">
                                    <a class="btn-sm btn-outline-secondary"
                                       href="/item-details/@item.CollectionId/@item.Id">@localizer["Details"]</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    }
</div>