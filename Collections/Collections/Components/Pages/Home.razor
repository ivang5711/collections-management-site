@page "/"
@using Components.TestData

<PageTitle>Collections home page</PageTitle>
<div class="container-xxl py-3">
    <div>
        <h1 class="display-6">
            <span class="text-danger">
                <i class="bi bi-fire"></i>
            </span>
            Top 5 Collections
        </h1>
    </div>
    <div class="d-flex flex-column flex-md-row justify-content-between my-3">
        <div class="row row-cols-2 row-cols-lg-4 row-cols-x1-5 g-3
            justify-content-center justify-content-md-start">
            @if (myFirstCollection is not null)
            {
                @foreach (Collection item in myFirstCollection)
                {
                    <div class="col">
                        <TopCollections Collection="item" />
                    </div>
                }
            }
            else
            {
                for (int i = 0; i < 10; i++)
                {
                    <div class="col">
                        <TopCollections />
                    </div>
                }
            }

        </div>
    </div>
</div>

@code {
    private List<Collection>? myFirstCollection;
    public List<Collection> CreateData()
    {
        DataGenerator fakeCollections = new("en");
        int seed = 123;
        return fakeCollections.GenerateCollection(5, seed);
    }

    protected override async Task OnInitializedAsync()
    {
        myFirstCollection = await Task.Run(() => CreateData());
    }
}
